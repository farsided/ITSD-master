            @Html.Partial("Field")
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Save" class="btn btn-success text-white" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
