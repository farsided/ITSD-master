@model ITSD.Areas.ITSD.Models.tbl_Template

@{
    ViewBag.Title = "Edit Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h6>Update Template</h6>
        </div>
        <div class="card-header">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row mb-2 g-2">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Template)
                        @Html.TextAreaFor(model => model.Template, 30, 10, new { @class = "form-control", placeholder = "Insert the description of what you are requesting here" })
                        @Html.ValidationMessageFor(model => model.Template, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "General", "JobOrder")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        TextEditor('#Template');
    </script>
}