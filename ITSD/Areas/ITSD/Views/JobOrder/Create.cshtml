@model ITSD.Areas.ITSD.Models.tbl_JobOrder

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = new PMSRedirect.UserSessions();
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h6>New Request</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row mb-2 g-2">
                    @Html.Partial("RequestField", Model)
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Pending")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#RequestedBy').val(`@user.User.Info.AutoNo`);
        $(document).ready(function () {
            $('#RequestedBy').select2();
            TextEditor('#JobDescription');
        });
    </script>
}
